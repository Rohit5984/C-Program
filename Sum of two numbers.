/* Write a C program using function to calculate the sum of two numbers.
   OR
   Write a C program to calculate the sum of two numbers.
   (Recommended: use function technique)
*/

#include <stdio.h> 
void checkSum(float a, float b);
int main() {
    float a, b;
    printf("Enter two numbers: ");
    scanf("%f %f", &a, &b);

    // Function call
    checkSum(a, b);

    return 0;
}

// Function definition
void checkSum(float a, float b) {
    float s = a + b;
    printf("Sum is %.2f\n", s);
}

/* Write a C program to calculate the sum of two numbers (without function) */

#include <stdio.h>

int main() {
    float a, b, s;

    printf("Enter two numbers: ");
    scanf("%f %f", &a, &b);

    s = a + b;
    printf("Sum is %.2f\n", s);

    return 0;
}
